<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="testBean"
          class="ru.alexsem.springcource.TestBean">
        <constructor-arg type="java.lang.String" value="Aleksandr"/>
        <constructor-arg type="int" value="35"/>
    </bean>

    <bean id="musicBean"
          class="ru.alexsem.springcource.RockMusic">
    </bean>

    <bean id="musicBean1"
          class="ru.alexsem.springcource.ClassicalMusic">
    </bean>

    <bean id="musicBean2"
          class="ru.alexsem.springcource.RapMusic">
    </bean>

    <bean id="musicPlayer"
          class="ru.alexsem.springcource.MusicPlayer">
        <constructor-arg ref="musicBean"/>
    </bean>


    <context:property-placeholder location="classpath:musicPlayer.properties"/>
    <!--    bean == instance of a class (object)-->
    <bean id="musicPlayer6"
          class="ru.alexsem.springcource.MusicPlayerLesson6">
        <!--        Spring looks for setter setMusic and takes the value.
        In this case there is a no-arg constructor provided by default.
        We don't specify it below-->
        <property name="music" ref="musicBean"/>
        <!--        This is bean fields initialization-->
        <!--        <property name="name" value="Some name"/>-->
        <!--        <property name="volume" value="50"/>-->
        <property name="name" value="${musicPlayer6.name}"/>
        <property name="volume" value="${musicPlayer6.volume}"/>
    </bean>


    <!--    Collections-->
    <bean id="musicPlayerHomework"
          class="ru.alexsem.springcource.MusicPlayerHomework">
        <property name="musicList">
            <list>
                <ref bean="musicBean"/>
                <ref bean="musicBean1"/>
                <ref bean="musicBean2"/>
            </list>
        </property>
    </bean>

</beans>